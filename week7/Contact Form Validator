    <div class="form-container">
        <h2>Contact Form</h2>

        <form id="contactForm">
            <label>Name:</label>
            <input type="text" id="name">
            <small class="error" id="nameError">Name cannot be empty!</small>

            <label>Email:</label>
            <input type="email" id="email">
            <small class="error" id="emailError">Enter a valid email!</small>

            <label>Message:</label>
            <textarea id="message" rows="4"></textarea>
            <small class="error" id="messageError">Message must be at least 10 characters!</small>

            <button type="submit">Submit</button>
        </form>
    </div>

    <script src="script.js"></script>
