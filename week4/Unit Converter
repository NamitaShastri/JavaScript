script.js :-

function convert() {
    var val = parseFloat(document.getElementById("my_value").value);
    var unit1 = document.getElementById("unit_from").value;
    var unit2 = document.getElementById("unit_to").value;
    var result_element = document.getElementById("result");

    if (isNaN(val)) {
        result_element.innerHTML = "Please enter a valid number!";
        return;
    }

    var result;

    if (unit1 == "km" && unit2 == "miles") {
        result = val * 0.621371;
        result_element.innerHTML = "Result: " + result + " miles";

    } else if (unit1 == "miles" && unit2 == "km") {
        result = val / 0.621371;
        result_element.innerHTML = "Result: " + result + " km";

    } else if (unit1 == "m" && unit2 == "feet") {
        result = val * 3.28084;
        result_element.innerHTML = "Result: " + result + " feet";

    } else if (unit1 == "feet" && unit2 == "m") {
        result = val / 3.28084;
        result_element.innerHTML = "Result: " + result + " m";

    } else if (unit1 == "kg" && unit2 == "lbs") {
        result = val * 2.20462;
        result_element.innerHTML = "Result: " + result + " lbs";

    } else if (unit1 == "lbs" && unit2 == "kg") {
        result = val / 2.20462;
        result_element.innerHTML = "Result: " + result + " kg";

    } else if (unit1 == "kg" && unit2 == "g") {
        result = val * 1000;
        result_element.innerHTML = "Result: " + result + " g";

    } else if (unit1 == "g" && unit2 == "kg") {
        result = val / 1000;
        result_element.innerHTML = "Result: " + result + " kg";

    } else if (unit1 == "c" && unit2 == "f") {
        result = (val * 9/5) + 32;
        result_element.innerHTML = "Result: " + result + " F";

    } else if (unit1 == "f" && unit2 == "c") {
        result = (val - 32) * 5/9;
        result_element.innerHTML = "Result: " + result + " C";

    } else if (unit1 == "c" && unit2 == "k") {
        result = val + 273.15;
        result_element.innerHTML = "Result: " + result + " K";

    } else if (unit1 == "k" && unit2 == "c") {
        result = val - 273.15;
        result_element.innerHTML = "Result: " + result + " C";

    } else if (unit1 == "f" && unit2 == "k") {
        result = (val - 32) * 5/9 + 273.15;
        result_element.innerHTML = "Result: " + result + " K";

    } else if (unit1 == "k" && unit2 == "f") {
        result = (val - 273.15) * 9/5 + 32;
        result_element.innerHTML = "Result: " + result + " F";

    } else if (unit1 == "sec" && unit2 == "min") {
        result = val / 60;
        result_element.innerHTML = "Result: " + result + " minutes";

    } else if (unit1 == "min" && unit2 == "sec") {
        result = val * 60;
        result_element.innerHTML = "Result: " + result + " seconds";

    } else if (unit1 == "min" && unit2 == "hr") {
        result = val / 60;
        result_element.innerHTML = "Result: " + result + " hours";

    } else if (unit1 == "hr" && unit2 == "min") {
        result = val * 60;
        result_element.innerHTML = "Result: " + result + " minutes";

    } else if (unit1 == "sec" && unit2 == "hr") {
        result = val / 3600;
        result_element.innerHTML = "Result: " + result + " hours";

    } else if (unit1 == "hr" && unit2 == "sec") {
        result = val * 3600;
        result_element.innerHTML = "Result: " + result + " seconds";

    } else if (unit1 == unit2) {
        result_element.innerHTML = "Result: " + val + " " + unit2 + " (same unit)";

    } else {
        result_element.innerHTML = "Sorry, I can't convert that!";
    }
}
