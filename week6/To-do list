script.js
let inp_box = document.querySelector(".todo-input");
let addBtn = document.querySelector(".add-btn");
let todo_list = document.querySelector(".todo-list");

var todos = [];

function addTodo() {
    const todo_text = inp_box.value;
    if (todo_text.trim() === "") {
        alert("Please write a task!");
        return;
    }

    todos.push(todo_text);
    inp_box.value = "";
    display();
}

function display() {
    todo_list.innerHTML = null;
    todos.forEach((t, i) => {
        const todo = document.createElement('li');
        todo.textContent = t;

        const delbtn = document.createElement('button');
        const editbtn = document.createElement('button');

        delbtn.textContent = 'delete';
        editbtn.textContent = 'edit';

        delbtn.onclick = function() {
            todos.splice(i, 1);
            display();
        }

        editbtn.onclick = function() {
            let newText = prompt("Enter new item:", t);
            if (newText !== null && newText.trim() !== "") {
                todos[i] = newText;
            }
            display();
        }

        todo.appendChild(delbtn);
        todo.appendChild(editbtn);
        todo_list.appendChild(todo);
    });
}

inp_box.addEventListener("keyup", function(event) {
    if (event.key === "Enter") {
        addTodo();
    }
});

display();
